<h1>Peachly</h1>

<%= form_for(@site) do |f| %>
  <div class='form-group'>
    <%= f.label :url %>
    <%= f.text_field :url, autofocus: true, autocomplete: 'url', class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.submit 'Create Peachly', class: 'btn btn-primary' %>
  </div>
<% end %>

<% @peachlies.each do |url,peachly| %>
  <p><%= url %> -> <%= peachly %></p>
<% end %>
